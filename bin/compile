#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install bpm-tools"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://www.pogo.org.uk/~mark/bpm-tools/releases/bpm-tools-0.3.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz
make
make install PREFIX=/app/vendor/bpm-tools
echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/bpm-tag.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/bpm-tools/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/bpm-tools/bin"' >> $PROFILE_PATH